@prefix html: <http://www.w3.org/1999/xhtml#> .
@prefix http: <http://www.w3.org/2011/http#> .
@prefix list: <http://www.w3.org/2000/10/swap/list#> .
@prefix log: <http://www.w3.org/2000/10/swap/log#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix schema: <http://schema.org/> .
@prefix string: <http://www.w3.org/2000/10/swap/string#> .

# Server root shows HTML homepage
{
   ?site schema:name ?name ;
       schema:description ?desc ;
}
=> 
{
   ?site html:representation [
       a html:element ;
       html:tagName "html" ;
       html:children ( 
         [
           a html:element ;
           html:tagName "head" ;
           html:children ( 
             [
               a html:element ;
               html:tagName "title" ;
               html:children ( [
                   a html:text ;
                   html:content ?name 
               ] )
             ]
             [
               a html:element ;
               html:tagName "meta" ;
               html:attributes [
                 html:name "charset" ;
                 html:value "utf-8"
               ]
             ]
             [
               a html:element ;
               html:tagName "meta" ;
               html:attributes [
                 html:name "viewport" ;
                 html:value "width=device-width, initial-scale=1"
               ]
             ]
           )
         ]
         [
           a html:element ;
           html:tagName "body" ;
           html:children (
             [
               a html:element ;
               html:tagName "p" ;
               html:children ( [
                   a html:text ;
                   html:content ?desc
               ] )
             ]
           )
         ]
       )
   ] .
} .

# Server root shows HTML homepage
{
   ?request http:path "/" .
   ?site html:representation ?output .
}
=> 
{
   ?response a http:Response ;
       http:respondsTo ?request ;
       http:responseCode 200 ;
       http:contentType "text/html" ;
       http:body ?output .
} .
